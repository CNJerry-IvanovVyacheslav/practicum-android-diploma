<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Bold32TextStyle">
        <item name="android:textSize">@dimen/font_32</item>
        <item name="fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="Medium22TextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_22</item>
    </style>

    <style name="Medium16TextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Regular16TextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Regular12TextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="SearchBar">
        <item name="drawableStartCompat">@drawable/search_icon</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:hint">@string/hint_search_vacancy_et</item>
        <item name="android:backgroundTint">@color/background_grey</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="TeamTextview">
        <item name="android:layout_marginStart">@dimen/space_16</item>
        <item name="android:layout_marginEnd">@dimen/space_16</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:titleTextColor">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_64</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Widget.App.SearchInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppX.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="boxBackgroundColor">@color/search_field_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="placeholderTextColor">@color/search_hint_day_night</item>
        <item name="placeholderTextAppearance">@style/TextAppearance.App.Subtitle</item>
        <item name="endIconTint">@color/black_universal</item>
        <item name="cursorColor">?attr/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.AppX.TextInputLayout" parent="">
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle</item>
        <item name="imageButtonStyle">@style/Widget.App.TextField.ImageButton</item>
        <item name="editTextStyle">@style/Widget.App.TextInputEditText</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Widget.App.TextField.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:paddingRight">@dimen/space_8</item>
    </style>

    <style name="Widget.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.App.Subtitle</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/space_12</item>
    </style>

    <style name="blueNotifications" parent="blueElements">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="blueElements">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:background">@drawable/background_blue_rounded</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">@dimen/size_48</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>

    <style name="placeholderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:layout_marginTop">@dimen/space_16</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
