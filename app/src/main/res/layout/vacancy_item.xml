<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/space_16"
    android:paddingVertical="@dimen/space_8">

    <ImageView
        android:id="@+id/employerLogoIVRecycler"
        android:layout_width="@dimen/size_48"
        android:layout_height="@dimen/size_48"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="@dimen/size_48"
        android:layout_height="@dimen/size_48"
        android:background="@drawable/background_vacancy_item_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vacancyNameAndCityTVRecycler"
        android:layout_width="@dimen/space_0"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:paddingStart="@dimen/space_12"
        android:textColor="@color/black_day_night"
        android:textSize="@dimen/font_22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/employerLogoIVRecycler"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry"
        tools:text="Требуется крутой разработчик, Пермь" />

    <TextView
        android:id="@+id/companyNameTVRecycler"
        android:layout_width="@dimen/space_0"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:paddingStart="@dimen/space_12"
        android:textColor="@color/black_day_night"
        android:textSize="@dimen/font_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vacancyNameAndCityTVRecycler"
        app:layout_constraintTop_toBottomOf="@+id/vacancyNameAndCityTVRecycler"
        tools:ignore="RtlSymmetry"
        tools:text="Google" />

    <TextView
        android:id="@+id/salaryTVRecycler"
        android:layout_width="@dimen/space_0"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:paddingStart="@dimen/space_12"
        android:textColor="@color/black_day_night"
        android:textSize="@dimen/font_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vacancyNameAndCityTVRecycler"
        app:layout_constraintTop_toBottomOf="@+id/companyNameTVRecycler"
        tools:ignore="RtlSymmetry"
        tools:text="от 40 000 до 200 000 ₽" />

</androidx.constraintlayout.widget.ConstraintLayout>
